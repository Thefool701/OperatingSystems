#include <ctype.h>
#include <stdint.h>
#include <stdio.h>
#include <string.h>
#include <sys/wait.h>
#include <time.h>
#include <unistd.h>
int main() {
  int p1[2];
  if (pipe(p1) == -1) {
    return 1;
  }
  int pid = fork();
  if (pid == -1) {
    return 2;
  }

  if (pid == 0) {
    int x;
    if (read(p1[0], &x, sizeof(x)) == -1) {
      return 3;
    }
    printf("Recieved %d\n", x);
    x *= 4;
    if (write(p1[1], &x, sizeof(x)) == -1) {
      return 4;
    }
    printf("Wrote %d\n", x);
  } else {
    // Parent Process
    srand(time(NULL));
    int y = rand() % 10;
    if (write(p1[1], &y, sizeof(y)) == -1) {
      return 5;
    }
    printf("Wrote %d\n", y);
    if (read(p1[0], &y, sizeof(y)) == -1) {
      return 6;
    }
    printf("Result is %d\n", y);
    wait(NULL);
  }

  return 0;
}
